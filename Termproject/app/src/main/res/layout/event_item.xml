            android:layout_height="wrap_content"
            android:text="dndndn"
            android:id="@+id/times"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="djdjdjdj"
            android:layout_below="@+id/times"
            android:id="@+id/event1"/>
